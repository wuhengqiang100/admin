    <update id="updateUserOnlyCredit" parameterType="com.xiaoshu.admin.entity.User">
        UPDATE sys_user
        SET credit=#{credit}
        WHERE id=#{id}
    </update>

    <select id="selectUserByUser" parameterType="com.xiaoshu.admin.entity.User" resultMap="UserMap01">
        SELECT * from sys_user s
        <where>
            <if test="identity != null and identity != ''">
                s.identity=#{identity}
            </if>
            <if test="requestPlace != null and requestPlace != ''">
                AND s.request_place=#{requestPlace }
            </if>
            <if test="age != null and age!=''">
                AND s.age=#{age }
            </if>
            <if test="tel != null and tel!=''">
                AND s.tel=#{tel }
            </if>
            <if test="email != null and email != ''">
                AND s.email=#{email }
            </if>
        </where>

    </select>

    <select id="selectUserByTellOrEmail" parameterType="java.lang.String" resultMap="UserMap01">
        SELECT * from sys_user s
        <where>
            <if test="tel != null and tel!=''">
                s.tel=#{tel }
            </if>
            <if test="email != null and email != ''">
                AND s.email=#{email }
            </if>
        </where>

    </select>

    <select id="selectUserByMap" parameterType="java.util.Map" resultMap="UserMap">
        SELECT
        u.id,
        u.login_name,
        u.nick_name,
        u.tel,
        u.email,
        u.password,
        u.salt,
        u.tel,
        u.email,
        u.identity,
        u.request_place,
        u.age,
        /*u.reputation,*/
        u.locked,
        u.is_admin,
        u.del_flag,
        u.credit,
       /* u.own_manager_id,*/
        u.icon,
        r.id AS "role.id",
        r.name AS "role.name",
        m.id AS "menu.id",
        m.name AS "menu.name",
        m.permission AS "menu.permission",
        m.href AS "menu.href",
        m.bg_color AS "menu.bgColor",
        m.icon AS "menu.icon",
        m.sort AS "menu.sort",
        u.remarks
        from
        sys_user u
        left join sys_user_role sur on sur.user_id = u.id
        left join sys_role r on r.id = sur.role_id
        left join sys_role_menu srm on srm.role_id = r.id
        left join sys_menu m on m.id = srm.menu_id
        where
        1=1
        <if test="id == null or id == ''">
            and u.del_flag = false
            and r.del_flag = false
        </if>
        <if test="loginName !=null and loginName !=''">
            and (
            u.login_name = #{loginName}
            or u.tel = #{loginName}
            or u.nick_name = #{loginName}
            or u.email = #{loginName}
            )
        </if>
        <if test="id != null and id != ''">
            and u.id = #{id}
        </if>
    </select>

    <select id="saveUserRoles">
        insert into sys_user_role(user_id,role_id)
        values
        <foreach collection="roleIds" item="item" index="index" separator=",">
            (#{userId},#{item.id})
        </foreach>
    </select>

    <delete id="dropUserRolesByUserId" parameterType="java.lang.String">
        delete from sys_user_role where user_id = #{userId}
    </delete>
    <insert id="insertUserRegist" parameterType="com.xiaoshu.admin.entity.UserRegist">
        INSERT INTO sys_user
        (id,login_name,nick_name,icon,password,salt,tel,email,identity,request_place,age,locked,create_date,create_by,update_date,update_by,remarks,del_flag,is_admin,credit)
        VALUES
        (#{id},#{nickName},#{nickName},null,#{password},#{salt},#{tel},#{email},#{identity},#{requestPlace},#{age},#{locked},now(),NULL ,now(),NULL ,NULL ,0,#{adminUser},1.0);
    </insert>

    <select id="findAllUser" resultMap="UserMap01">
        SELECT * from sys_user ;
    </select>


    <select id="findFarmOwnManagerIdById" resultType="java.lang.String">
        SELECT farm_own_id  FROM farm_own_manager  where farm_manager_id=#{id};
    </select>


</mapper>